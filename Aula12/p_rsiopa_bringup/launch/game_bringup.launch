<launch>

  <arg name="player_name" default="p_rsiopa"/>

  <rosparam command="load" file="$(find <player_name>_bringup)/params/game.yaml"/>

  <include file="$(find p_rsiopa_bringup)/launch/bringup.launch">
    <arg name="player_name" value="$(arg player_name)"/>
    <arg name="x_pos" value="$(arg x_pos)"/>
    <arg name="y_pos" value="$(arg y_pos)"/>
    <arg name="z_pos" value="$(arg z_pos)"/>
  </include>

  <arg name="player_color" default="Orange"/>
  <arg name="x_pos" default="-0.4"/>
  <arg name="y_pos" default="-1.5"/>
  <arg name="z_pos" default="0.0"/>


  <group ns="$(arg player_name)">
    <param name="tf_prefix" value="$(arg player_name)" />
    <param name="robot_description" command="$(find xacro)/xacro '$(find p_rsiopa_description)/urdf/p_rsiopa.urdf.xacro'
                                                 player_name:=$(arg player_name) player_color:=$(arg player_color) "/>
<!--    <param name="robot_description" command="$(find xacro)/xacro &#45;&#45;inorder $(find p_rsiopa_description)/urdf/p_rsiopa.urdf.xacro" />-->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  </group>

  <include file="$(find p_rsiopa_bringup)/launch/spawn.launch">
    <arg name="player_name" value="$(arg player_name)"/>
    <arg name="x_pos" value="$(arg x_pos)"/>
    <arg name="y_pos" value="$(arg y_pos)"/>
    <arg name="z_pos" value="$(arg z_pos)"/>
  </include>

  <include file="$(find p_rsiopa_bringup)/launch/visualize.launch">
  </include>

</launch>